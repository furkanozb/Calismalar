@using MVC_Intermediate.Models
@model UrunKategoriModel

@{
    ViewBag.Title = "Index";

}

<h2>ürünler:</h2>
<hr />
<div class="col-md-12">
    <div class="alert alert-success" role="alert"><strong>@Model.UrunSayisi</strong>adet ürün listelendi </div>
</div>

<div class="col-lg-12">
    @foreach (var urun in Model.Urunler)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="http://via.placeholder.com/350x150" alt="...">
                <div class="caption">
                    <h3>@urun.UrunAdi</h3>
                    <p>
                        @if (urun.Aciklama.Length > 50)
                        {
                            @(urun.Aciklama.Substring(0, 47) + "...")
                        }
                        else
                        {
                            @urun.Aciklama
                        }
                    </p>
                    <p>
                        <a href="/Home/Details/?id=@urun.UrunId " class="btn btn-default" role="button">Button</a>
                    </p>
                </div>
            </div>
        </div>

    }
</div>





